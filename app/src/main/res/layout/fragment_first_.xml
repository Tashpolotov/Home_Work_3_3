<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".First_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:src="@drawable/photo_3"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vaccine Types Avaiable"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:textColor="@color/textcolor1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="There are types of vaccines available to accelerate herd immunity, so that this pandemic will quickly disappear"
        android:layout_gravity="center"
        android:layout_marginTop="150dp"
        android:textSize="22dp"
        android:fontFamily="@font/regular"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:textColor="@color/textcolor" />

    <Button
        android:id="@+id/Next_btn"
        style="@style/Base_B"
        android:text="Next"
        android:background="@drawable/styl"/>

    <Button
        android:id="@+id/Skip_btn"
        style="@style/Base_C"
        android:background="@drawable/styl"
        android:text="Skip" />


</FrameLayout>