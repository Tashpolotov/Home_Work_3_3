<?xml version="1.0" encoding="utf-8"?>
<resources>

    
    <style name="Base_A" parent="TextAppearance.AppCompat.Button">

        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginRight">60dp</item>
    </style>

    <style name="Base_B" parent="Base_A">
        <item name="android:layout_gravity">bottom|right</item>
        <item name="backgroundTint">@color/darkgray</item>
    </style>

    <style name="Base_C" parent="Base_A">
        <item name="android:layout_gravity">bottom|left</item>
        <item name="android:layout_marginLeft">80dp</item>
        <item name="backgroundTint">@color/gray</item>
    </style>

</resources>